@model Kurs

<h2>Kurs Qeyd Et</h2>
<hr>


<form asp-controller="Kurs" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Baslik" class="form-label">Kurs Adi</label>
        <input asp-for="Baslik" class="form-control">
    </div>

